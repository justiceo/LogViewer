<Window x:Class="LogViewer.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FilterWindow" Height="447" Width="450">
    <Grid Margin="0,0,0,356" Height="52" VerticalAlignment="Bottom">
        <ComboBox HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Height="32"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="145,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174"/>
        <Button Content="Add Filter" HorizontalAlignment="Left" Margin="335,10,0,0" VerticalAlignment="Top" Width="79" Height="32"/>
        <ScrollViewer HorizontalAlignment="Left" Height="277" Margin="10,63,0,-288" VerticalAlignment="Top" Width="421" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"/>
        <DockPanel HorizontalAlignment="Left" Height="52" LastChildFill="False" VerticalAlignment="Top" Width="100"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="52" Margin="0,0,11,-356" VerticalAlignment="Bottom" Width="224">
            <Button Content="Apply Filter" HorizontalAlignment="Right" Width="87" Margin="10,10,10,8"/>
            <Button Content="Clear All" HorizontalAlignment="Right" Width="87"  Margin="10,10,10,8"/>
        </StackPanel>

    </Grid>
</Window>
